generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  createdAt     DateTime
  updatedAt     DateTime
  emailVerified Boolean
  image         String?
  Form          Form[]
  accounts      Account[]
  sessions      Session[]

  @@map("user")
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String    @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model Form {
  id            String         @id @default(cuid())
  userId        String
  title         String         @unique
  description   String
  buttonText    String
  formConfig    Json
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  FormAnalytics FormAnalytics?
  submissions   Submission[]

  @@index([userId])
}

model Submission {
  id        String   @id @default(cuid())
  formId    String
  data      Json
  createdAt DateTime @default(now())
  country   String?
  form      Form     @relation(fields: [formId], references: [id])

  @@index([formId])
}

model FormAnalytics {
  id               String   @id
  formId           String   @unique
  totalSubmissions Int      @default(0)
  dailySubmissions Json
  countryCounts    Json
  lastUpdated      DateTime
  Form             Form     @relation(fields: [formId], references: [id])

  @@index([formId])
}
